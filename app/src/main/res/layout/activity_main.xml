<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_picture_resized"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80e6e6ff"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="BLUE TEAM"
                android:textColor="@color/blueTeam"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/Team_blue_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="65sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40e6e6ff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:src="@drawable/archery_m" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/stop_m" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.63"
                    android:src="@drawable/barrel_m" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archery_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/stop_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/barrel_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="#737373" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80e6e6ff"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="RED TEAM"
                android:textColor="@color/redTeam"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/Team_red_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="65sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40e6e6ff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:src="@drawable/tv_m" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chicken_m" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_m" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/chicken_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/car_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#60e6e6ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="reset"
        android:text="RESET" />

    <ImageView
        android:id="@+id/blue_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:src="@drawable/blue" />

    <ImageView
        android:id="@+id/red_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:src="@drawable/red" />

    <ImageView
        android:id="@+id/archery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/blue_team"
        android:clickable="true"
        android:onClick="archery_point"
        android:src="@drawable/archery_onfinger" />


    <ImageView
        android:id="@+id/barrel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/blue_team"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/archery"
        android:clickable="true"
        android:onClick="barrel_point"
        android:src="@drawable/barrel_onfinger" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/blue_team"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="148dp"
        android:clickable="true"
        android:onClick="stop_point"
        android:src="@drawable/stop_onfinger" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/red_team"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="car_point"
        android:src="@drawable/car_onfinger" />

    <ImageView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/red_team"
        android:layout_toLeftOf="@id/car"
        android:clickable="true"
        android:onClick="tv_point"
        android:src="@drawable/tv_onfinger" />

    <ImageView
        android:id="@+id/chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/car"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="chicken_point"
        android:paddingBottom="35dp"
        android:paddingRight="20dp"
        android:src="@drawable/chicken_onfinger" />

</RelativeLayout>
